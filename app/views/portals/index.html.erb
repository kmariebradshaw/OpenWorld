

<div style="margin: 0 auto;width:100%;">
<% @portals.sort_by(&:created_at).reverse.each do |portal| %>
	<% if portal.id == 1 %>
		<ul id="origin">
	<% else %>
		<ul class="">
	<% end %>
			<li><h1><%= link_to portal.title, portal_path(portal) %></h1></li>
			<li class="tags">
				<% portal.tags.each do |tag|%>
					<%= tag.name %>
				<% end %> 
			</li>
			<li><p><%= portal.description.first(80).html_safe%>...</p></li>
			<li class="author">
				<% if portal.user.character_name %>
				<%= portal.user.character_name %>
				<% else %>
				<%= portal.user.first_name %>
				<% end %>	
				</li>
			<% if portal.user.id == current_user.id %>
				<li class="user_links"><%= link_to "edit", edit_portal_path(portal) %> - <%= link_to 'delete', 
             portal_path(portal), 
                         method: :delete, 
                         data: { confirm: 'This works and will actually delete this, permanently. I cannot get it back. So, up to you.' } %></li>

			<% end %>

		</ul>
<% end %>
</div>

<style>
	ul { 
	 	list-style: none;
	 	display: inline-block;
	 	padding: 25px;
	 	width: 24%; 
	 	box-sizing: border-box;
	 	word-wrap: break-word;
	 	min-width: 250px;
	 }


	 .author { font-size: 9pt; }
	 .user_links { margin-top: 10px; }
</style>